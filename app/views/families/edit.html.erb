<% provide(:title, "世帯情報の編集") %>
<% provide(:button_text, '世帯情報の更新') %>
<h1>世帯情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 d-flex input-form">
    <%= form_with(model: @family, url: family_path, local: true, method: :patch) do |f| %>
      <%= f.label :spouse, '配偶者の有無' %>
      <%= f.check_box :spouse, class: 'form-control' %>

      <%= f.label :children, '子供の人数' %>
      <%= f.number_field :children, in: 0..10, class: 'form-control', required: true %>

      <%= f.label :parent, '同居している親の人数' %>
      <%= f.number_field :parent, in: 0..6, class: 'form-control', required: true %>

      <%= f.label :worker, '世帯内で働いている人数' %>
      <%= f.number_field :worker, in: 0..8, class: 'form-control', required: true %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
