<% provide(:title, 'ユーザ一覧') %>
<h1>ユーザ一覧</h1>
<p class="">
	<%= form_tag(users_path, method: :get) do %>
  	<div class="input-group col-md-3">
    	<%= search_field_tag "q", params[:q], class: "form-control", placeholder: "名前検索" %>
      <span class="input-group-btn">
      	<%= submit_tag "検索", class: "btn btn-default" %>
      </span>
    </div>
  <% end %>
</p>

<%= will_paginate %>

<ul class="users">
	<%= render @users %>
</ul>

<%= will_paginate %>
